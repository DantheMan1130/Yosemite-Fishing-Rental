@page "{id:int?}"
@model YosemiteFishingRental.Pages.Rentals.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Rental</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Rental.RentalID" />
            <div class="form-group">
                <label asp-for="Rental.ProductID" class="control-label"></label>
                <select asp-for="Rental.ProductID" class="form-control" asp-items="ViewBag.ProductID"></select>
                <span asp-validation-for="Rental.ProductID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rental.CustomerFirstName" class="control-label"></label>
                <input asp-for="Rental.CustomerFirstName" class="form-control" />
                <span asp-validation-for="Rental.CustomerFirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rental.CustomerLastName" class="control-label"></label>
                <input asp-for="Rental.CustomerLastName" class="form-control" />
                <span asp-validation-for="Rental.CustomerLastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rental.CustomerEmail" class="control-label"></label>
                <input asp-for="Rental.CustomerEmail" class="form-control" />
                <span asp-validation-for="Rental.CustomerEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rental.CustomerPhone" class="control-label"></label>
                <input asp-for="Rental.CustomerPhone" class="form-control" />
                <span asp-validation-for="Rental.CustomerPhone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rental.RentalDate" class="control-label"></label>
                <input asp-for="Rental.RentalDate" class="form-control" />
                <span asp-validation-for="Rental.RentalDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rental.RentalPaid" class="control-label"></label>
                <select asp-for="Rental.RentalPaid" class="form-control">
                    <option value="Yes">Yes</option>
                    <option value="No">No</option>
                </select>
                <span asp-validation-for="Rental.RentalPaid" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
